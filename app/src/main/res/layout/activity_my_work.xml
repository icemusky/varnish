<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/main_top"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/OrderTab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_tablayout"
        app:tabIndicatorColor="@color/blue1"
        app:tabIndicatorHeight="2dp"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/OrderVp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/OrderTab"
        android:layout_weight="1"></android.support.v4.view.ViewPager>


</LinearLayout>